<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Label:
            text: "Welcome to Slammed, the last game you'll ever want to play"
            font_size: '24sp'
            halign: 'center'
            valign: 'middle'
        Button:
            text: 'Enter'
            font_size: '20sp'
            on_press: root.enter

<GameSelectionScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Spinner:
            id: spinner
            text: 'Menu'
            values: ['Cast Instructions', 'Kings', 'Drunk Trivia', 'Most Likely To', 'Roulette', 'Would You Rather']
            size_hint: None, None
            size: 200, 44
            on_text: root.show_screen(self, self.text)

<GameScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Label:
            id: game_label
            text: 'Game Screen'
            font_size: '24sp'
        Button:
            text: 'Draw Card'
            font_size: '20sp'
            on_press: root.draw_card
        Button:
            text: 'Back'
            font_size: '20sp'
            on_press: root.go_back

<RouletteGameScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Label:
            text: 'Draw a Card!'
            font_size: '24sp'
        Label:
            id: card_label
            text: ''
            font_size: '20sp'
        Button:
            text: 'Draw Card'
            font_size: '20sp'
            on_press: root.draw_card
        Button:
            text: 'Back'
            font_size: '20sp'
            on_press: root.go_back

